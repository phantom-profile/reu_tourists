%tr[user]
  %td= user.name
  %td= user.nickname
  %td= user.email
  %td= user.is_elder?
  %td= user.viewed_pages
  %td= user.edited_resources
  %td= user.created_at
  %td
    = link_to_unless user.is_elder?, "Destroy", user_path(user), method: :delete,
      remote: true,
      data: { confirm: "Are you sure?" }
