%div.container-md.tourbase-form
  %h4= "#{action} Tourbase"
  = form_for tourbase, remote: true do |f|
    %div.row
      %div.mb-3.col
        = f.label :name, class: 'form-label'
        = f.text_field :name, class: 'form-control'
      %div.mb-3.col
        = f.label :region, class: 'form-label'
        = f.select :region_id, Region.all.collect { |r| [r.nearest_city, r.id] }, {}, class: 'form-select'
      %div.mb-3.col
        = f.label :max_capacity, class: 'form-label'
        = f.number_field :max_capacity, class: "form-control", id: "replyNumber", min: "1", step: "1", "data-bind": "value:replyNumber"
      %div.mb-3
        = f.submit action, class: "btn btn-primary"