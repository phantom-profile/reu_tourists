<% if @sword.valid? %>
  $('.add-swords-errors').html('')
  $('#sword_<%=@sword.id%>')[0].innerHTML = '<%=j render partial: 'sword', locals: { sword: @sword }%>'
  $('.form-control').each(function(index) {
      this.value = ""
  })
  $('.sword-form')[0].innerHTML = '<%=j render partial: 'form', locals: {sword: @new_sword, action: 'Create'}%>'
<% else %>
  $('.add-swords-errors').html('<%=j render partial: 'shared/errors_list', locals: { errors: @sword.errors }%>')
<%end%>