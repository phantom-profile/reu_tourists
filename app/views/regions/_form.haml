%div.container-md.region-form
  %h4= "#{action} Region"
  = form_for region, remote: true do |f|
    %div.row
      %div.mb-3.col
        = f.label :nearest_city, class: 'form-label'
        = f.text_field :nearest_city, class: 'form-control'
      %div.mb-3.col
        = f.label :country, class: 'form-label'
        = f.text_field :country, class: 'form-control'
      %div.mb-3.col
        = f.label :country_code, class: 'form-label'
        = f.text_field :country_code, class: 'form-control'
      %div.mb-3
        = f.submit action, class: "btn btn-primary"